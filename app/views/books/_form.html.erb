<%= form_with model:book,local:true do |f| %>


  <div class="form-group">
    <%= f.label :book_name %>
    <%= f.text_field :book_name , class: 'form-control book_name' %>
  </div>


  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :book_body, class: 'form-control book_body' %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>