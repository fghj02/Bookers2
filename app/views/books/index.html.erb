<%= render 'list', books: @books %>

<h1>NEW BOOK</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <%= form_with model: @book do |f| %>
    <h4>image</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>title</h4>
      <%= f.text_field :book_name %>
    <h4>body</h4>
      <%= f.text_area :book_body %>
    <%= f.submit 'create' %>
  <% end %>

